!!!
%html{:lang => "en"}
  %head

    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "Rama Propiedades"
    = stylesheet_link_tag    "application"
    
    = csrf_meta_tags
  %body
    #pagina
      %a#eclay{href: "http://www.facebook.com/eclaycom", target: "_blank"}
        =image_tag "ico.png", size: "25x25"
      %a#loading{href: "http://www.facebook.com/eclaycom", target: "_blank"}
        =image_tag "loading.gif", size: "25x25"
    / header
    - if request.path== root_path
      - @height = 625
    - else
      -@height = 150
      
    %header{ style: "height: #{@height}px"}
      .container_16
        .logo
          %h1
            %a{:href => "index.html"}
              %strong Rama
              Propiedades
              
        %nav
          %ul
            %li
              =link_to "Inicio", root_path
            %li
              =link_to "Vender", inicio_venta_path
            %li
              =link_to "Comprar", inicio_compra_path
            %li
              =link_to "Arriendo", inicio_arriendo_path
            %li
              =link_to "Traslados", inicio_traslados_path
            %li
              =link_to "Financiar", inicio_financiamiento_path
            %li
              = link_to "Contacto", inicio_contacto_path
        / faded slider begin
        - if request.path== root_path
          #faded
            
            .rap
              %a{:href => "#"}
                = holder_tag "571x398"
              %a{:href => "#"}
                = holder_tag "571x398"
              %a{:href => "#"}
                = holder_tag "571x398"
            %ul.pagination
              %li
                %a{:href => "#", :rel => "0"}
                  = holder_tag "93x84"
                  %span.left
                    Villa
                    %br/
                    2007 year
                    %br/
                    5000 sq.ft
                  %span.right
                    Brick, glass
                    %br/
                    3 beds
                    %br/
                    2 baths
              %li
                %a{:href => "#", :rel => "1"}
                  = holder_tag "93x84"
                  %span.left
                    Villa
                    %br/
                    2009 year
                    %br/
                    3500 sq.ft
                  %span.right
                    Brick, glass
                    %br/
                    5 beds
                    %br/
                    3 baths
              %li
                %a{:href => "#", :rel => "2"}
                  = holder_tag "93x84"
                  %span.left
                    Villa
                    %br/
                    2010 year
                    %br/
                    4200 sq.ft
                  %span.right
                    Brick, glass
                    %br/
                    4 beds
                    %br/
                    3 baths
            =image_tag "extra-banner.png", class: "extra-banner"
          / faded slider end
    #flash.container_16{style: "color:green"}
      = flash[:notice]
      
    = yield
    / footer
    %footer
      .container_16
        %nav
          %ul
            %li
              %a{:href => "index.html"} home
            %li
              %a{:href => "index-1.html"} Selling
            %li
              %a{:href => "index-2.html"} buying
            %li
              %a{:href => "index-3.html"} renting
            %li
              %a{:href => "index-4.html"} moving
            %li
              %a{:href => "index-5.html"} finance
            %li
              %a{:href => "index-6.html"} contacts
        %p.copy
          %span real estate
          \&nbsp;&copy; &nbsp;2010 &nbsp; &nbsp;
          %a{:href => "index-7.html"} Privacy Policy
    = javascript_include_tag "application"
    :javascript
      $(function(){
        
        $(".accordion dt").toggle(function(){
          $(this).next().slideDown();
        }, function(){
          $(this).next().slideUp();
        });
      })
      
      Cufon.refresh();